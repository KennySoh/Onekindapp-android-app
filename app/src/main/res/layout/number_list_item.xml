<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="0.7dp"
            card_view:cardMaxElevation="1dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="10dp"
            card_view:contentPaddingBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myEntriesText_Date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:text=" Feb"
                        android:textColor="@color/colorPrimaryDarkOB"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/myEntriesText_Date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:text="01"
                        android:textColor="@color/colorPrimaryDarkOB"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/myEntriesText_Date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:text="17.40 PM"
                        android:textColor="@color/colorPrimaryDarkOB"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myEntriesText_Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Subtitle1"
                        android:textColor="@color/colorPrimaryDarkOB"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/myEntriesText_Subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed-light"
                        android:maxEms="15"
                        android:singleLine="false"
                        android:text="Lorem ipsum dolor sit amet consectetur Lorem ipsum dolor sit amet consectetur Lorem ipsum dolor sit amet consectetur"
                        android:textColor="@color/colorPrimaryDarkOB"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image_mint_leave_adjusted" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</FrameLayout>