                android:layout_height="wrap_content"
                android:layout_below="@id/text_watertemp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/data_title_3"
                android:textSize="@dimen/data_data_size" />

            <TextView
                android:id="@+id/text_electricalconductivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_sunlight"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/data_title_4"
                android:textSize="@dimen/data_data_size" />

            <TextView
                android:id="@+id/text_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_electricalconductivity"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/data_title_5"
                android:textSize="@dimen/data_data_size" />

            <TextView
                android:id="@+id/data_waterlevel"
                android:layout_width="wrap_content"
