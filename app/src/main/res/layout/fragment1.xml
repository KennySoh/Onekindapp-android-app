    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0.7dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        card_view:contentPaddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_tank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="top"
                android:text="@string/system_title_1"
                android:textSize="@dimen/data_title_size"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/text_waterlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_tank"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/data_title_1"
                android:textSize="@dimen/data_data_size" />

            <TextView
                android:id="@+id/text_watertemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
